{% render 'announcement', classes: 'py-3', text: section.settings.text, link: section.settings.link, attributes: block.shopify_attributes %}

{% schema %}
{
  "name": "t:sections.announcement.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "t:sections.announcement.settings.text.label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.announcement.settings.link.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement.presets.name"
    }
  ]
}
{% endschema %}
