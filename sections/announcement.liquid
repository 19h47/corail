{% liquid
	assign hide_on_mobile_classes = ''

	if section.settings.hide_on_mobile
		assign hide_on_mobile_classes = ' hidden lg:block'
	endif

	assign classes = classes | default: 'py-3' | append: hide_on_mobile_classes
%}

{% render 'announcement', classes: classes, text: section.settings.text, link: section.settings.link, attributes: block.shopify_attributes %}

{% schema %}
{
  "name": "t:sections.announcement.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "t:sections.announcement.settings.text.label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.announcement.settings.link.label"
    },
    {
      "type": "checkbox",
      "id": "hide_on_mobile",
      "label": "t:sections.announcement.settings.hide_on_mobile.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement.presets.name"
    }
  ]
}
{% endschema %}
