<div>
	<div class="container my-16">
		<div class="row">
			<div>
				<h1 class="text-center font-bold uppercase leading-[5.5rem] font-display text-[2.8125rem] lg:text-[5.625rem]">
					{{- page.title | escape -}}
				</h1>
			</div>
			{% if page.content != blank %}
				<div class="lg:col-6/12 lg:ml-3/12">
					<div class="wysiwyg text-center mt-2 font-display font-medium">
						{{- page.content -}}
					</div>
				</div>
			{% endif %}
		</div>
	</div>

</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [

  ]
}
{% endschema %}
