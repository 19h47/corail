          "type": "text",
          "id": "anchor",
          "label": "t:sections.main-lab.blocks.introduction.settings.anchor.label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-lab.blocks.introduction.settings.title.label"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "t:sections.main-lab.blocks.introduction.settings.content.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.main-lab.blocks.introduction.settings.image.label"
        },
        {
          "type": "header",
          "content": "t:sections.main-lab.blocks.introduction.settings.key_figures_header.content"
        },
        {
          "type": "textarea",
          "id": "key_figures_title",
          "label": "t:sections.main-lab.blocks.introduction.settings.key_figures_title.label"
        },
        {
          "type": "textarea",
          "id": "key_figures_content",
          "label": "t:sections.main-lab.blocks.introduction.settings.key_figures_content.label"
        }
      ]
    },
    {
      "type": "content",
