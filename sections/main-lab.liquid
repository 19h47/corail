        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-lab.blocks.slider_content.settings.title.label"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "t:sections.main-lab.blocks.slider_content.settings.content.label"
