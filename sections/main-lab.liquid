
<div class="py-5">
	<div class="container">
		<div class="row">
			<div>
				<div class="h-[20.1875rem] lg:h-[44.625rem] rounded-[1.25rem] overflow-hidden relative bg-orange-grayish">
					{% if section.settings.video %}
						<video
							class="h-full w-full object-cover relative z-1"
							loop
							muted
							autoplay
							playsinline
							poster="{{ section.settings.video.preview_image | image_url }}"
						>
							{% for source in section.settings.video.sources %}
								<source src="{{ source.url }}" type="{{ source.mime_type }}">
							{% endfor %}
						</video>
					{% endif %}

					<div class="absolute inset-0 flex items-center justify-center z-2">
						<h1 class="font-display font-medium text-6xl uppercase text-white">{{- page.title -}}</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% for block in section.blocks %}
	{% if 'introduction' == block.type %}
		<div class="my-32">
			<div class="container">
				<div class="row lg:items-center">
					<div class="lg:ml-3/12 lg:col-4/12">
						<div class="h-[14.75rem] lg:h-[33.875rem] rounded-[1.25rem] overflow-hidden">
							{{ block.settings.image | image_url: width: 692, height: 888 | image_tag:
								loading: 'lazy',
								widths: '275, 550, 710, 1420',
								class: 'w-full h-full object-cover object-center block'
							}}
						</div>
					</div>
					<div class="lg:col-4/12">
						<div class="lg:mx-14">
							<h2 class="font-semibold text-3xl font-display uppercase">{{- block.settings.title -}}</h2>
							<p class="mt-2.5">{{- block.settings.content -}}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	{% if 'content' == block.type %}
		<div>
			<div class="container">
				<div class="row">
					<div>
						CONTENT
					</div>
				</div>
			</div>
		</div>
	{% endif %}

{% endfor %}

<div>
	<div class="container">
		<div class="row">
			<div>
				{% for block in section.blocks %}
					{% if 'slider_content_title' == block.type %}
						<h2 class="font-bold text-[5.625rem] font-display uppercase">{{ block.settings.title }}</h2>
					{% endif %}

				{% endfor %}

				<ul>
					{% for block in section.blocks %}
						{% if 'slider_content' == block.type %}
							<li>SLIDER CONTENT</li>
						{% endif %}
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>

<div>
	<div class="container">
		<div class="row">
			<div>
				{% for block in section.blocks %}
					{% if 'slider_image_title' == block.type %}
						<h2 class="font-bold text-[5.625rem] font-display uppercase">{{ block.settings.title }}</h2>
					{% endif %}

				{% endfor %}

				<ul>
					{% for block in section.blocks %}
						{% if 'slider_content' == block.type %}
							<li>SLIDER IMAGE</li>
						{% endif %}
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>


